<%- include('./base/header.ejs') %>

    <!-- <h1>We are going to add student</h1> -->
 <%- include('./base/nav.ejs') %>
     <div class="container">
         <div class="alert text-center align:text-center bg-primary my-3" style="color: white;">
            <h4>Edit Student Form</h4>
         </div>
        </div>
    <!-- <h1> we are going to start server side rendering </h1> -->
     <div class="container">
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <form action="/edit/student/<%=student._id%>" method="post">
                    <div>
                        <label for="" class="form-label">Rollno</label>
                        <input type="number" class="form-control" name="rollNo" value="<%=student.rollNo %>"></input>
                    </div>
                    <div>
                        <label for="" class="form-label">Student Name</label>
                        <input type="text" class="form-control" name="name"  value="<%=student.name %>"></input>
                    </div>
                    <div>
                        <label for="" class="form-label">Father Name</label>
                        <input type="text" class="form-control" name="fatherName"  value="<%=student.fatherName %>"></input>
                    </div>
                    <div>
                        <label for="" class="form-label">Course</label>
                            <select class="form-control" name="course">
                                <option value="B.Tech">B.Tech</option> 
                                <option value="M.Tech">M.Tech</option>
                                <option value="MBA">MBA</option>
                                <option value="BBA">BBA</option>
                                <option value="BCA">BCA</option>
                            </select>
                    </div>
                    <div>
                        <label for="" class="form-label">Branch</label>
                            <select class="form-control" name="branch">
                                <option value="CSE">CSE</option>
                                <option value="AIML">AIML</option>
                                <option value="IT">IT</option>
                                <option value="ECE">ECE</option>
                                <option value="ME">ME</option>
                            </select>
                    </div>
                    <div>
                        <label for="" class="form-label">Year of Admission</label>
                        <input type="text" class="form-control" name="yearOfAdmission"  value="<%=student.yearOfAdmission %>"></input>
                    </div>
                    <input type="submit" value="Edit Student" class="btn btn-warning w-100 my-3">
                    <!-- <div>
                        <a href="/" class="btn btn-danger w-100 my-3">Add Student</a>
                    </div> -->
                </form>
            </div>
            <div class="col"></div>
        </div>
     </div>

    <%-include('./base/footer.ejs') %>